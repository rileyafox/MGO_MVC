@model Item
@{
    string title = ViewBag.Action + " Item";
    ViewBag.Title = title;
}

<h1>@ViewBag.Title</h1>

<form asp-action="Save" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ItemId">Item ID</label>
        <input asp-for="ItemId" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Name">Item Name</label>
        <input asp-for="Name" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Cost">Cost</label>
        <input type="text" asp-for="Cost" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Category ID</label>
        <input type="text" asp-for="CategoryId" class="form-control">
    </div>

    <input type="hidden" asp-for="ItemId" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="List" class="btn btn-primary">Cancel</a>
</form>